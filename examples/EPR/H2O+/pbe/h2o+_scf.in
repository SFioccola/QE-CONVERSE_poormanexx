&control
    prefix = 'h2o+'
    calculation = 'scf'
    restart_mode = 'from_scratch'
    pseudo_dir = '../pseudo/'
    outdir = './scratch/'
    tstress = .false.
    tprnfor = .false.
    verbosity = 'high'
/
&system
    ibrav = 1
    celldm(1) = 20
    nat = 3
    ntyp = 2
    ecutwfc = 100
    nspin = 2
    tot_charge = 1
    occupations = 'fixed'
    tot_magnetization = 1
/
&electrons
    diagonalization = 'david'
    diago_thr_init = 1e-4
    conv_thr = 1e-8
/
